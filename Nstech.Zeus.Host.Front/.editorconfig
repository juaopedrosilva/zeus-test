# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Front End Languages (HTML, JS, CSS etc)

[*.{ts,js,css,html}]
indent_style = space
indent_size = 2

# Misc

# YAML Style
[*.{yml,yaml,sls,jinja}]
indent_style = space
indent_size = 2


# JSON
[*.json]
indent_style = space
indent_size = 2
